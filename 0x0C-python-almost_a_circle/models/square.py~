#!/usr/bin/python3
"""This module defines the Square class, which inherits from Rectangle."""

from models.rectangle import Rectangle

class Square(Rectangle):
    """Square class, inherits from Rectangle."""

    def __init__(self, size, x=0, y=0, id=None):
        """Initialize the Square class.

        Args:
            size (int): Size of the square.
            x (int): X-coordinate of the square's position (default is 0).
            y (int): Y-coordinate of the square's position (default is 0).
            id (int): Optional ID for the instance (default is None).
        """
        super().__init__(size, size, x, y, id)  # Call the Rectangle class constructor with adjusted arguments

        @property
    def size(self):
        """Getter for size."""
        return self.width  # Size is equivalent to width for Square

    @size.setter
    def size(self, value):
        """Setter for size."""
        self.width = value  # Set width and height to the same value
        self.height = value  # Set width and height to the same value

        def update(self, *args, **kwargs):
        """Update the Square attributes with the provided arguments or key/value pairs.

        Args:
            *args: List of positional arguments in the order (id, size, x, y).
            **kwargs: Dictionary of keyword arguments (attribute=value).
        """
        if args:
            attributes = ["id", "size", "x", "y"]
            for i, arg in enumerate(args):
                if i < len(attributes):
                    setattr(self, attributes[i], arg)
        elif kwargs:
            for key, value in kwargs.items():
                setattr(self, key, value)

    def __str__(self):
        """Override the __str__ method to return a custom string representation."""
        return f"[Square] ({self.id}) {self.x}/{self.y} - {self.width}"
